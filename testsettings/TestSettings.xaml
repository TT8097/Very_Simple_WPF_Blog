<UserControl x:Class="WpfBlog.testsettings.TestSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfBlog.testsettings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="272*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="zatwiedz"  Grid.Row="11"  Grid.ColumnSpan="2" Click="Button_Click"  />
        <TextBox Name="imie"  Grid.Column="2"  Grid.Row="1" TextWrapping="Wrap" Text="TextBox" />
        <TextBox Name="nazwisko" Grid.Column="2"  Grid.Row="3"  Text="TextBox" />
        <TextBox Name="wiek" Grid.Column="2"  Grid.Row="6"  Text="TextBox" />
        <TextBox Name="pseudonim" Grid.Column="2"  Grid.Row="9"  Text="TextBox" />
        <Label Grid.Column="1" Content="imie"  Grid.Row="1" />
        <Label Grid.Column="1" Content="nazwisko" Grid.Row="3"/>
        <Label Grid.Column="1" Content="wiek"  Grid.Row="6" />
        <Label Grid.Column="1" Content="pseudonim" Grid.Row="9"/>
    </Grid>
</UserControl>
